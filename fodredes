    <button id="scrollToTopBtn">Volver arriba</button>

    <script>
        // JavaScript para el botón de enviar
        document.getElementById("submitBtn").addEventListener("click", function() {
            alert("¡Gracias por ponerte en contacto con nosotros!");
        });

        // JavaScript para el botón "Volver arriba"
        var scrollToTopBtn = document.getElementById("scrollToTopBtn");

        // Mostrar el botón cuando el usuario baja una cierta distancia
        window.onscroll = function() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                scrollToTopBtn.style.display = "block";
            } else {
                scrollToTopBtn.style.display = "none";
            }
        };

        // Volver al encabezado cuando se hace clic en el botón
        scrollToTopBtn.addEventListener("click", function() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        });

        document.getElementById("commentForm").addEventListener("submit", function(e) {
            e.preventDefault();
            var userName = document.getElementById("userName").value;
            var userComment = document.getElementById("userComment").value;

            if (userName && userComment) {
                var commentDiv = document.createElement("div");
                commentDiv.className = "comment";
                commentDiv.innerHTML = "<p><strong>" + userName + ":</strong> " + userComment + "</p>";

                var commentsSection = document.querySelector(".comments");
                commentsSection.insertBefore(commentDiv, document.querySelector(".comment-form"));

                // Guardar el comentario en localStorage
                var comments = JSON.parse(localStorage.getItem("comments")) || [];
                comments.push({ userName: userName, userComment: userComment });
                localStorage.setItem("comments", JSON.stringify(comments));

                document.getElementById("userName").value = "";
                document.getElementById("userComment").value = "";
            }
        });

        var comments = JSON.parse(localStorage.getItem("comments")) || [];
        var commentsSection = document.querySelector(".comments");

        comments.forEach(function(comment) {
            var commentDiv = document.createElement("div");
            commentDiv.className = "comment";
            commentDiv.innerHTML = "<p><strong>" + comment.userName + ":</strong> " + comment.userComment + "</p>";
            commentsSection.insertBefore(commentDiv, document.querySelector(".comment-form"));
        });

        function deleteComment(button) {
            if (confirm("¿Estás seguro de que deseas eliminar este comentario?")) {
                var commentDiv = button.parentNode;
                commentDiv.parentNode.removeChild(commentDiv);

                // Actualizar los comentarios en localStorage
                var commentText = commentDiv.innerText.trim();
                var updatedComments = comments.filter(function(comment) {
                    return comment.userName + ": " + comment.userComment !== commentText;
                });
                localStorage.setItem("comments", JSON.stringify(updatedComments));
            }
        }
    </script>
